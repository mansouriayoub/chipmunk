<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title || 'Moroccan Chipmunk' %> - Chipmunk Electronique
  </title>
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/favicon.png">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-deep-navy sticky-top">
    <div class="container-fluid px-4">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/logo.jpg" alt="Moroccan Chipmunk Logo" class="navbar-logo me-2">
        <span>Moroccan Chipmunk</span>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarContent">
        <form action="/products" method="GET" class="d-flex mx-auto" style="max-width: 400px;">
          <input type="text" name="search" class="form-control" placeholder="Search products..."
            value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
        </form>

        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link text-circuit-blue" href="/products">Products</a>
          </li>
          <% if (user) { %>
            <li class="nav-item">
              <span class="nav-link text-white">
                <%= user.email %>
              </span>
            </li>
            <li class="nav-item">
              <a class="nav-link text-circuit-blue" href="/logout">Logout</a>
            </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link text-circuit-blue" href="/auth">Login</a>
              </li>
              <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <% if (messages.success && messages.success.length> 0) { %>
    <div class="container mt-3">
      <% messages.success.forEach(msg=> { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% }) %>
    </div>
    <% } %>

      <% if (messages.error && messages.error.length> 0) { %>
        <div class="container mt-3">
          <% messages.error.forEach(msg=> { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% }) %>
        </div>
        <% } %>

          <!-- Main Content -->
          <%- body %>

            <!-- Footer -->
            <footer class="bg-deep-navy text-white text-center py-4 mt-5">
              <div class="container">
                <p class="mb-1">&copy; 2024 Moroccan Chipmunk - Chipmunk Electronique</p>
                <p class="mb-0">Your trusted source for micro-electronics in Morocco</p>
              </div>
            </footer>

            <!-- Bootstrap JS Bundle -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>