<% const title=product.name; const body=` <div class="container py-4">
  <a href="/products" class="btn btn-outline-primary mb-4">‚Üê Back to Products</a>

  <div class="row g-4">
    <div class="col-lg-6">
      <img src="${product.imgUrl}" alt="${product.name}" class="img-fluid rounded shadow">
    </div>

    <div class="col-lg-6">
      <div class="card bg-chipmunk-tan border-0 shadow-sm">
        <div class="card-body p-4">
          <p class="text-uppercase small text-muted mb-2">${product.category}</p>
          <h1 class="h2 text-deep-navy mb-3">${product.name}</h1>

          <div class="mb-3">
            <strong>Color:</strong> <span class="badge bg-deep-navy">${product.color}</span>
          </div>

          <p class="display-5 text-fez-red fw-bold mb-4">${product.price.toFixed(2)} MAD</p>

          <p class="lead mb-4">${product.desc}</p>

          <form action="/cart/add/${product.slug}" method="POST">
            <button type="submit" class="btn btn-fez-red btn-lg w-100">Add to Cart</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>
  `;
  %>
  <%- include('layout', { title, body }) %>